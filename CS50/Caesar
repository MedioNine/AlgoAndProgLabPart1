#include <stdio.h>
#include <cs50.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main( int argv, string argc[])
{
    if (argv == 2)
    {
        
        int k = atoi (argc[1]);
        k = k % 26;
        string f = GetString();
        int l = strlen(f);     
        for (int  i = 0; i < l; i++)
            {   
             if isalpha(f[i])
             { 
              if (islower(f[i])) 
                 { 
                      if (((int)f[i]+k)>=123)  
                       {
                           if (i==l-1) 
                            printf ("%c\n",(char) f[i] + k - 26);
                                else printf ("%c",(char) f[i] + k - 26);
                       }
                    else 
                        {
                            if (i==l-1) 
                              printf("%c\n", (char) f[i] + k);
                                else  printf("%c", (char) f[i] + k); 
                        } 
                
                  }
              if (isupper( f[i])) 
                  {
                        if (((int)f[i]+k)>=91)  
                          {
                              if (i==l-1)  
                                printf ("%c\n",(char) f[i] + k - 26);
                                  else  printf ("%c",(char) f[i] + k - 26);
                          }
                    else
                           { 
                              if (i==l-1)
                                printf("%c\n", (char) f[i] + k); 
                                  else printf("%c", (char) f[i] + k); 
                           }
                  }
              }
              else  {
                      if (i==l-1) 
                      printf("%c\n",f[i]);
                      else printf("%c",f[i]);
                     }
            }
    return 0;
    }
    else return 1;
}
