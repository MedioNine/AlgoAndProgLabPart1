#include <stdio.h>
#include <cs50.h>

int main()
{ 
    int x;
    do
        {  printf("Height: ");
           x = GetInt();
        }
    while ( (x < 0) || (x > 23) );
    int k = 1;
    for (int i = 0; i < x; i++)
    { 
            k++;
           
            for (int l = 0; l < (x+1-k); l++)
            
                   printf(" ");        
              for (int j = 0; j < k; j++)
              {
                if (j == k-1) 
                {
                printf("#\n"); 
                }
                else 
                 { printf("#");
                 }
              }
    }
          




}
